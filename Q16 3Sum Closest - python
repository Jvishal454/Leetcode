class Solution:
    def threeSumClosest(self, nums: List[int], target: int) -> int:
        res = nums[0] + nums[1] + nums[len(nums) - 1]
        nums.sort()
        
        for i in range(len(nums) - 2):
            
            l = i + 1
            r = len(nums) - 1
            
            while l < r:
                current = nums[i] + nums[l] + nums[r]
                if current == target:
                    return target
                elif current > target:
                    r -= 1
                else:
                    l += 1
                    
                if math.fabs(current - target) < math.fabs(res - target):
                    res = current
        return res
                    
